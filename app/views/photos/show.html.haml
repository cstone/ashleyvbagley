%ol.breadcrumb
  %li= link_to 'Home', root_path
  %li= link_to 'Photos', photos_path
  %li.active= @photo.title
%h4= @photo.title
%p
  %small
    = time_ago_in_words(@photo.created_at)
    ago
%p= image_tag @photo.photo_image, class: 'img-responsive'
%br/
%p= @photo.description.html_safe
%br/
- if @photo.allow_comments
  = render 'layouts/structure/disqus-thread'