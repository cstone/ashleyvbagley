%ol.breadcrumb
  %li= link_to 'Home', root_path
  %li= link_to 'Videos', videos_path
  %li.active= @video.title
%h3= @video.title
%p
  %iframe{allowfullscreen: "", frameborder: "0", height: "360", src: "//www.youtube.com/embed/#{@video.source}?rel=0", width: "640"}
%p
  %small
    Published #{time_ago_in_words(@video.created_at)} ago
%p= @video.description.html_safe
%p
- if @video.allow_comments
  = render 'layouts/structure/disqus-thread'