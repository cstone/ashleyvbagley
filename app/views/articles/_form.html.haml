= form_for @article do |f|
  - if @article.errors.any?
    #error_explanation
      %h2= "#{pluralize(@article.errors.count, "error")} prohibited this article from being saved:"
      %ul
        - @article.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :title
    = f.text_field :title
  .field
    = f.label :body
    = f.text_area :body
  .field
    = f.label :article_image
    = f.text_field :article_image
  .field
    = f.label :allow_comments
    = f.check_box :allow_comments
  .field
    = f.label :active
    = f.check_box :active
  .actions
    = f.submit 'Save'
